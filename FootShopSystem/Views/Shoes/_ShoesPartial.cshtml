@model IEnumerable<ShoeServiceModel>

<div class="row">
    @foreach (var shoe in Model)
     {
        <div class="card" style="width: 18rem;">
            <img src="@shoe.ImageUrl" class="card-img-top" >
            <div class="card-body">
                <h5 class="card-title">@shoe.Brand</h5>
                <p class="card-text">@shoe.Brand @shoe.Model - @shoe.Price</p>
                 <a class="btn btn-info detailsBtn" asp-controller="Shoes" asp-route-id="@shoe.Id" asp-action="Details">View</a>
                <a asp-controller="Shoes" asp-action="Edit" asp-route-id="@shoe.Id" class="btn btn-warning detailsBtn">Edit</a>
                <a asp-controller="Shoes" asp-action="Delete" asp-route-id="@shoe.Id" class="btn btn-danger detailsBtn">Delete</a>
            </div>
        </div>
     }
</div>