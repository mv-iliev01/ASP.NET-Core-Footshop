@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/registerLogin.css" />
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="registerLogin.css" />
    <title>Document</title>
</head>x    
<body>
    <section class="mainContainer">
        <img class="picture" src="/img/logo.png">
        <h2 style="text-align: center">Login</h2>
        <hr>
        <br>
        <div class="divContainer">
            <form method="post">
                <div>
                    <div>
                        <h4 asp-for="Input.Username" class="text">Username</h4>
                        <input asp-for="Input.Username" class="form-control box" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <div class="form-group">
                        <div>
                            <h4 asp-for="Input.Username" class="text">Password</h4>
                            <input asp-for="Input.Password" class="form-control box" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <br>
                    <div>
                        <button type="submit" value="Register" class="button">Log In</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
